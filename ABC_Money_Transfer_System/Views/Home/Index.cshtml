@model List<ABC_Money_Transfer_System.Models.CurrencyRate>

<!DOCTYPE html>
<html>
<head>
    <title>Forex Rates</title>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Forex Rates</h1>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No forex rates available at the moment.
            </div>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Currency</th>
                        <th scope="col">ISO Code</th>
                        <th scope="col">Unit</th>
                        <th scope="col">Buy Rate</th>
                        <th scope="col">Sell Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rate in Model)
                    {
                        <tr>
                            <td>@rate.Currency.Name</td>
                            <td>@rate.Currency.Iso3</td>
                            <td>@rate.Currency.Unit</td>
                            <td>@rate.Buy</td>
                            <td>@rate.Sell</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>

