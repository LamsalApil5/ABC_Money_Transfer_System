<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC_Money_Transfer_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABC_Money_Transfer_System.styles.css" asp-append-version="true" />
    <style>
        /* Body styling */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: block; /* Default layout */
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #c0c2f0;
            padding-top: 20px;
        }

            .sidebar a {
                color: black;
                padding: 10px 15px;
                font:bold;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #ffff;
                }

        /* Content wrapper styles */
        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
        }

        /* Navbar styles */
        .navbar {
            margin-left: 250px;
        }

            .navbar .navbar-nav .nav-item .nav-link {
                color: #000;
            }

        .user-profile {
            display: flex;
            align-items: center;
            color: #000;
        }

            .user-profile img {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                margin-right: 10px;
            }

        /* Footer styles */
        footer {
            margin-top: 20px; /* Adds some space before the footer */
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-black text-center">ABC System</h4>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("Index", "Users")">Users</a>
        <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
    </div>

    <!-- Navbar (only user icon on the right) -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <!-- User Profile Icon -->
                        <li class="nav-item">
                            <a class="nav-link text-dark user-profile" href="#">
                                <i class="fa fa-user"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="https://kit.fontawesome.com/8bec846cb1.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
