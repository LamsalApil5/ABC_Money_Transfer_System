@model ABC_Money_Transfer_System.Models.Accounts

<h2>Create Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Bank_Name" class="control-label">Bank Name</label>
        <input asp-for="Bank_Name" class="form-control" />
        <span asp-validation-for="Bank_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountNumber" class="control-label">Account Number</label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsersId" class="control-label">User</label>
        <select asp-for="UsersId" class="form-control" asp-items="ViewBag.Users">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="UsersId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
